@model List<TRUSIRENT.Models.Entities.RentalCartItem>

@{
    ViewData["Title"] = "Twój koszyk";
}

<h2 class="mb-4">Twój koszyk</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        Twój koszyk jest pusty.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Pojazd</th>
                <th>Ilość</th>
                <th>Cena za dzień</th>
                <th>Łącznie</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Vehicle.Name</td>
                    <td>@item.Amount</td>
                    <td>@item.Vehicle.PricePerDay zł</td>
                    <td>@(item.Vehicle.PricePerDay* item.Amount) zł</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="vehicleId" value="@item.Vehicle.VehicleId" />
                            <button type="submit" class="btn btn-danger btn-sm">Usuń</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a class="btn btn-primary" href="/Rental/Checkout">Przejdź do wypożyczenia</a>
    </div>
}